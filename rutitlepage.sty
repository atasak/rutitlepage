% Radboud University Nijmegen titlepage
% Author: Mart Lubbers
% Date: 2016-06-28
%
% Usage: \usepackage{rutitle}
%
% Changes the titlepage to the radboud university titlepage
% It uses Author, Date and Title from the preamble.
% You have the following commands to change the appearance:
% \rutitleinst{} 
% \rutitlecourse{}
% \rutitleauthorstext{}
%
% TODO
% - Make key-value options available
% - Internationalize (dutch logos)
% - Nice document
% - Make CTAN ready
\usepackage{graphicx}
\usepackage{ifpdf}

\def\@rutitleinst{Radboud University Nijmegen}
\def\@rutitlecourse{Master Thesis}
\def\@rutitleauthorstext{Authors:}

\newcommand{\rutitleinst}[1]{\def\@rutitleinst{#1}}
\newcommand{\rutitlecourse}[1]{\def\@rutitlecourse{#1}}
\newcommand{\rutitleauthorstext}[1]{\def\@rutitleauthorstext{#1}}

\renewcommand{\maketitle}{
	\begin{titlepage}
		\makeatletter
		\begin{center}
			\textsc{\LARGE\@rutitlecourse}\\[1.5cm]
			\ifpdf\includegraphics[height=150pt]{logo.png}\\
			\else\includegraphics[height=150pt]{logo.eps}\\
			\fi
			\vspace{0.4cm}
			\textsc{\Large\@rutitleinst}\\[1cm]
			\hrule
			\vspace{0.4cm}
			\textbf{\large\@title}\\[0.4cm]
			\hrule
			\vspace{2cm}
			\begin{minipage}[t]{0.45\textwidth}
				\begin{flushleft}\large
					\textit{\@rutitleauthorstext}\\
					\@author{}
				\end{flushleft}
			\end{minipage}
			\begin{minipage}[t]{0.45\textwidth}
					\begin{flushright}\large
					\textit{}
				\end{flushright}
			\end{minipage}
			\vfill
			{\large\@date}
		\end{center}
		\makeatother
	\end{titlepage}
}
